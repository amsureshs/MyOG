<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clear_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/clear_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/clear_color">

                <LinearLayout
                    android:id="@+id/trumpsShowLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/clear_color"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imgTrumpsView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtTrumpsLbl"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="@string/game_trumps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtWon3"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="@string/game_player_won"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"></LinearLayout>

                    <TextView
                        android:id="@+id/txtPlayerName3"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="@string/game_player_name_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnSettings"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/btnLastHand"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/clear_color">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@color/blue_dark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtWon4"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="@string/game_player_won"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"></LinearLayout>

                    <TextView
                        android:id="@+id/txtPlayerName4"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="@string/game_player_name_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <!--bord view-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/clear_color"
                    android:orientation="vertical">

                    <!--trumps select view-->
                    <LinearLayout
                        android:id="@+id/trumpsSelectLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/clear_color"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@color/clear_color"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/btnTrumps1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/rect_shape"
                                android:orientation="horizontal">
                            </ImageButton>

                            <ImageButton
                                android:id="@+id/btnTrumps2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="4dp"
                                android:background="@drawable/rect_shape"
                                android:orientation="horizontal">
                            </ImageButton>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@color/clear_color"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/btnTrumps3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginBottom="4dp"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/rect_shape"
                                android:orientation="horizontal">
                            </ImageButton>

                            <ImageButton
                                android:id="@+id/btnTrumps4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginBottom="4dp"
                                android:layout_marginRight="4dp"
                                android:background="@drawable/rect_shape"
                                android:orientation="horizontal">
                            </ImageButton>
                        </LinearLayout>

                    </LinearLayout>

                    <!--next card trumps view-->
                    <LinearLayout
                        android:id="@+id/nextCardTrumps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/clear_color"
                        android:orientation="vertical"
                        android:visibility="gone">
                    </LinearLayout>

                    <!--card played view-->
                    <LinearLayout
                        android:id="@+id/cardPlayedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/clear_color"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/clear_color"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/clear_color"
                                android:id="@+id/btnPlayedCard4" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/clear_color"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_marginBottom="1dp"
                                android:background="@color/clear_color"
                                android:id="@+id/btnPlayedCard3" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@color/clear_color"
                                android:layout_marginTop="1dp"
                                android:id="@+id/btnPlayedCard1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/clear_color"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@color/clear_color"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/btnPlayedCard2" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@color/blue_dark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtWon2"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="@string/game_player_won"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"></LinearLayout>

                    <TextView
                        android:id="@+id/txtPlayerName2"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="@string/game_player_name_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/clear_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnSortHand"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue_light"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>

                    <ImageButton
                        android:id="@+id/btnShowChat"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue_light"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/cardsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/clear_color"
                    android:orientation="horizontal">

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtPlayerName1"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="@string/game_player_name_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtWon1"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="@string/game_player_won"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/chatLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/clear_color">

            </ScrollView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="44dp" />

        </LinearLayout>

        <LinearLayout
        android:id="@+id/shuffleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/clear_color"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btnShuffle1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@color/blue_light"/>

        <ImageButton
            android:id="@+id/btnShuffle2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@color/blue_light"/>

        <ImageButton
            android:id="@+id/btnShuffle3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@color/blue_light"/>

    </LinearLayout>

        <RelativeLayout
            android:id="@+id/animationLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/clear_color"
            android:visibility="gone">

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
